# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "battery all"
order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "tztime local"
order += "volume master"
order += "cpu_temperature 0"  # Add this line for CPU temperature

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "Anime directory: %avail "
}

volume master {
        format = "♪: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "W: %ip (leaked hard)"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

cpu_temperature 0 {
        format = "CPU Temp: %degrees°C"  # Display CPU temperature in degrees Celsius
        path = "/sys/class/thermal/thermal_zone0/temp"  # Default path to the CPU temperature sensor
}

